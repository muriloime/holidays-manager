<%= form_for(@holiday) do |f| %>
  <% if @holiday.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@holiday.errors.count, "error") %> prohibited this holiday from being saved:</h2>

      <ul>
      <% @holiday.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <% if @alert_box == true %>
        <div id="dialog-confirm"></div>
        <script>
            alert("You have already Holliday(s) between these dates:\n" +
                    <% @holiday_exist.each do |holiday| %>
                    "\n Start Date: <%= holiday.start_date.strftime("%d/%m/%y") %>" +
                    "\n End Date: <%= holiday.end_date.strftime("%d/%m/%y") %>" +
                    "\n Content: <%= holiday.content %> \n" +
                    <% end %>
                "\n Please delete these Holiday(s) first. ")
        </script>
    <% end %>

    <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_select(:start_date, order: [:day, :month, :year]) %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.date_select(:end_date, order: [:day, :month, :year])%>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


