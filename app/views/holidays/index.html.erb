<h2>Total Business Days of <%= current_user.name %> Holidays Confirmed: <%= current_user.get_all_days_holidays_business%></h2>

<h1>Listing Holidays of <%= current_user.name %></h1>

<div id="calendar" class="small-calendar" holidays="<%= @holidays.to_json %>"></div>

<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }
    th, td {
        padding: 5px;
        text-align: center;
    }
</style>
<%if (@holidays.first != nil) then %>

    <table style="width:100%">
      <tr>
        <th>Start date</th>
        <th>End date</th>
        <th>Content</th>
        <th>User</th>
        <th>Status</th>
        <th>Days to Start</th>
        <th>Days to End</th>
        <th>Total of Days</th>
        <th>Total of Business Days</th>
        <th>Current?</th>
        <th colspan="3">Settings</th>
      </tr>
<%end%>
  <tbody>
    <% @holidays.each do |holiday| %>

      <tr>
        <td><%= holiday.start_date.strftime("%d/%m/%y") %></td>
        <td><%= holiday.end_date.strftime("%d/%m/%y") %></td>
        <td><%= holiday.content %></td>
        <td><%= holiday.user.name %></td>
        <td><%= holiday.status %></td>
        <td><%= holiday.get_days_to_start %></td>
        <td><%= holiday.get_days_to_end %></td>
        <td><%= holiday.get_days_total %></td>
        <td><%= holiday.get_days_total_business %></td>
        <td><%= holiday.current? %></td>
        <td><%= link_to 'Show', holiday %></td>
        <td><%= link_to 'Edit', edit_holiday_path(holiday) %></td>
        <td><%= link_to 'Destroy', holiday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Holiday', new_holiday_path %>



