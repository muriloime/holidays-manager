<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Studiare Holidays APP", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Callendar", root_path %></li>
        <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "My Holidays", holidays_path %></li>
                <li><%= link_to "Change my Password", edit_user_path(current_user) %></li>
              </ul>
            </li>
            <% if current_user.manager? %>
                <% num_pending_holiday = count_holidays_pending %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Admin Acess (<%= num_pending_holiday %>) <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Users Settings", admin_users_path %></li>
                    <li><%= link_to "Holiday Settings (#{num_pending_holiday})", admin_holidays_path %></li>

                  </ul>
                </li>
            <% end %>
            <li>
              <%= link_to "Log out", logout_path %>
            </li>
        <% else %>
            <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>