<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :login %>
        <%= f.email_field :login, class: 'form-control' %>

        <%= f.label :password%>
        <%= f.password_field :password, class: 'form-control' %>

        <center></br><%= f.submit "Log in", class: "btn btn-primary" %></center>
    <% end %>

  </div>
</div>