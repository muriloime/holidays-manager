<h1>Listing users</h1>

<center><%= link_to 'New User', new_admin_user_path,  class: 'btn_submit', style:'color:#FFFFFF;' %></center>
</br>

<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }
    th, td {
        padding: 5px;
        text-align: center;
    }
</style>

<table style="width:100%">
  <thead>
  <tr>
    <th>Name</th>
    <th>Login</th>
    <th>Manager</th>
    <th>Total Business Days of Holidays</th>
    <th colspan="4">Settings</th>
  </tr>
  </thead>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.login %></td>
        <td><%= user.manager? %></td>
        <td><%= user.get_all_days_holidays_business %></td>
        <td><%= link_to 'Show', admin_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Reset Password', reset_password_path(user), data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

<br>



