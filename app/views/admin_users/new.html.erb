<%= form_for @user, :url => admin_users_path(@user)  do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this holiday from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
