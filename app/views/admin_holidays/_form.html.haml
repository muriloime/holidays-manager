= form_for(@holiday, :url => admin_holiday_path(@holiday)) do |f|
  - if @holiday.errors.any?
    #error_explanation
      %h2
        = pluralize(@holiday.errors.count, "error")
        prohibited this holiday from being saved:
      %ul
        - @holiday.errors.full_messages.each do |message|
          %li= message
  .field
    %ol
      %li
        = f.radio_button :status, "Pending"
        Pending
      %li
        = f.radio_button :status, "Confirmed"
        Confirmed
      %li
        = f.radio_button :status, "Canceled"
        Canceled
  .actions
    = f.submit class: 'btn_submit'