%div{:align => "center"}
  %h1
    Email Configuration of #{current_user.name}
  = form_for :user, :url => update_emails_configuration_path do |f|
    - if @user.errors.any?
      #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this holiday from being saved:
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
    .field
      %h2 Receive emails notifications
      %li
        = f.radio_button :emails_receiver, true
        On
      %li
        = f.radio_button :emails_receiver, false
        Off
      %br/
      .actions
        = f.submit "Save Configuration", class: 'btn_submit'
    = link_to 'Calendar', root_url , class: 'btn_link'